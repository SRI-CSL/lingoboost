<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="@android:color/background_dark"
              android:paddingLeft="16.0dip"
              android:paddingRight="16.0dip"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/text_sleep_instructions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorSecondaryInverse"
        android:gravity="center"
        android:textSize="28.0sp"
        android:text="@string/text_sleep_session" />

    <TextView
        android:id="@+id/debug_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Debug Activity"
        android:textAlignment="textStart"
        android:textColor="?android:textColorSecondaryInverse"
        android:textSize="14.0sp" />

    <View
        android:id="@+id/view_slepp_1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/debug_sensor_orientation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Debug Orientation"
        android:textAlignment="textStart"
        android:textColor="?android:textColorSecondaryInverse"
        android:textSize="14.0sp" />

    <View
        android:id="@+id/view_slepp_2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/debug_sensor_acceleration_change"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Debug Acceleration Change"
        android:textAlignment="textStart"
        android:textColor="?android:textColorSecondaryInverse"
        android:textSize="14.0sp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_view_elapsed"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="18.0sp"
            android:text="@string/text_elapsed" />
        <!--android:textColor="#ff0000"-->

        <TextView
            android:id="@+id/text_view_elapsed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_elapsed"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:textSize="28.0sp"
            android:textColor="?android:textColorSecondaryInverse"
            android:text="12:00 am" />

        <TextView
            android:id="@+id/text_view_current"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_elapsed_time"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="18.0sp"
            android:text="@string/text_current" />

        <TextView
            android:id="@+id/text_view_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_current"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:textSize="28.0sp"
            android:textColor="?android:textColorSecondaryInverse"
            android:text="12:00 am" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:weightSum="1" >

            <Button
                android:id="@+id/quit_sleep"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_quit"
                android:textSize="24.0sp"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/pause_sleep"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_pause"
                android:textSize="24.0sp"
                android:layout_weight="0.5"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>